<view>

  <view wx:if="{{image}}" class="code_box">
    <image class="code_img" src="{{image}}"></image>
    <view class="img_info">
      <view class="img_info_title">文件路径</view>
      <view class="img_info_detail">{{image}}</view>
    </view>
  </view>
  <view wx:else class="box_text">上传的图片将展示在这里</view>

  <view wx:if="{{image}}" class="button_clear" bindtap="clear">清空</view>
  <view wx:else class="button" bindtap="uploadFile">上传一张图片</view>

</view>